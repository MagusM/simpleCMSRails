<div>
	<h1> Product No.<%= @product.id %> Details </h1>
	<div style="float: right">
		<%= link_to("Create New Product", {action: 'new'}) %> 
	</div>
	<div style="margin: 30px 0 0 0"><hr style="border-top: 1px solid red">
	</div>
</div>

<div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          	<th>ID</th>
          	<th>Name</th>
			<th>SKU</th>
			<th>Category</th>
			<th>Action</th>
		</tr>
      </thead>
      <tbody>
        <tr>
			<td><%= @product.id %></td>
			<td><%= @product.name %></td>
			<td><%= @product.sku %></td>
			<td><%= @product.category %></td>
			<td>
				<%= link_to("<< Back to list", {action: 'index'}) %> | 
				<%= link_to("Update", {action: 'edit', id: @product.id}) %> | 
				<%= link_to("Delete", {action: 'delete', id: @product.id}) %>
			</td>
		</tr>
		</tbody>
    </table>
</div>