<div class="container">

      <%= error_messages_for(@product) %>
      <div class="container" style="width: 50%">
        <%= form_for(:user, url: {action: 'validate_login', class: "form-signin"}) do |f| %>
          <h2 class="form-signin-heading">Please sign in</h2>
          <%= f.label(:name, "What is your name?") %>
          <%= f.text_field(:name, value: "Darth", class: "form-control") %>
          <%= f.label(:password, "What is your secret password?") %>
          <%= f.password_field(:password, value: "Vader", class: "form-control") %><br>
          <%= submit_tag("Login", class: "btn btn-lg btn-primary btn-block") %>
        <% end %>
      </div>
      <br>
      
      <% if !flash[:error].blank? %>
        <div class="alert alert-danger fade in">
          <%= link_to('<< X >>', {action: 'close_alert', class: "close btn-danger"}) %>
          <strong>Alert!</strong> <%= flash[:error] %>.
        </div>
      <% end %>








</div> 